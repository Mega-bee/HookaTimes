@model List<HookaPlaces_VM>
<div class="block block-posts" data-layout="grid-3" data-mobile-columns="1">
    <div class="container">
        <div class="white-background">
            <div class="block-header"  data-aos="fade-right">
                <img src="/FrontendAssets/images/svg/Group 36.svg" loading="lazy" alt="" class="icons">
                <h2 class="_1-6-h2">HookaTimes Places</h2>
            </div>
            <div class="block-products__body"  data-aos="fade-up">
                <div class="block-products__list" style="width: 100%;">
                    @foreach (var item in Model)
                    {
                        <partial name="../../../shared/Ecommerce/_HookaPlacePartial.cshtml" model="item" />

                    }
                </div>
            </div>
            <a asp-controller="Home" asp-action="HookaPlaces" class="see-all_button w-button"  data-aos="fade-up">See All</a> 

        </div>
    </div>
</div>
           

<style>
    

    .product-card__image{
        height:20em;
    }
    .product-image__img {
    height: 100% !important;
    object-fit: cover;
    width:100% !important;

}

     @@media only screen and (max-width: 880px){

    .product-image__img.product.is--featured {
    height:18em !important;
}
    }
</style>