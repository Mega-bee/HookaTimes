@{
    ViewData["Title"] = "Careers";
    ViewBag.CurrentPage = "Careers";
}

<style>
    .section {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        padding: 2.5em 5em;
    }

    .section.is--vacancies {
        padding: 2.5em 5em 7em 5em;
    }

    .vacancies-list-wrap {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }
    ._1-6-h2 {
        margin-top: 0px;
        margin-bottom: 0px;
        font-size: 1.6em;
        line-height: 1.23;
        font-weight: 600;
    }
    .vacancies-content-list {
        display: flex;
        width: 100%;
        margin-top: 2em;
        flex-direction: column;
        align-items: center;
    }
    .vacancies-content-top {
        margin-bottom: 1.7em;
        display: flex;
        width: 100%;
        padding-bottom: 1em;
        justify-content: flex-start;
        align-items: flex-start;
        border-bottom: 0.1em solid rgba(0, 0, 0, 0.5);
    }
    ._35col {
        width: 35%;
    }
    ._73col {
        width: 73%;
    }
    .list-title {
        font-size: 1.2em;
    }
    .div-block-36 {
        display: flex;
        width: 100%;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
    }

    .vacancie-name {
        font-size: 1.4em;
        font-weight: 500;
    }
    .vacancie-description-role {
        margin-bottom: 0px;
        font-size: 1.2em;
    }
</style>

