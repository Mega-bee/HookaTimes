<style>
    .site__footer {
        background-color: #ededed;
    }

    .footer-logo {
        width: 12em;
    }

    .row {
        justify-content: space-between;
    }

    .footer-line-separate {
        width: 100%;
        height: 0.07em;
        background-color: rgba(0, 0, 0, 0.2);
    }

    .footer-top-wrap {
        width: 75%;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .subscribe-wrap {
        width: 45%
    }

    .footer-links-wrap {
        width: 30%
    }


    @@media (max-width: 767px) {
        .footer-links {
            margin-top: 0px;
            text-align: left;
        }

        .footer-newsletter {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
        }

        .footer-newsletter__social-links {
            margin-top: 16px;
            justify-content: start;
        }

        .footer-newsletter__form {
            margin: 0 0;
            min-width: 100%;
        }
    }

    @@media (max-width: 991px) {

        .footer-newsletter {
            margin-top: 0px !important;
            max-width: none !important;
        }

        .row {
            display: flex;
            flex-direction: column;
        }

        .footer-top-wrap {
            width: 100%;
            margin-top: 2em;
            padding-left: 15px;
            padding-right: 15px;
        }
    }

    @@media (max-width:650px) {

        .footer-logo {
    width: 10em;
}

        .footer-top-wrap {
            flex-direction: column;
            margin-top: 3em;
        }

        .footer-links-wrap {
            margin-top: 1em;
            width: 100%;
        }

        .subscribe-wrap {
            width: 100%;
            margin-top: 1em;
        }
    }


    @@media (max-width:650px) {

        .footer-logo {
    width: 8em;
}
h5 {
    font-size: 15px;
    font-weight: 700;
}
    .footer-newsletter__title{
        font-size:18px;
    }
    
    }

</style>


