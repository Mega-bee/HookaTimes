@using HookaTimes.DAL.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager;

@model HookaPlaces_VM
<div class="block-products__list-item">
    <div class="product-card product-card--hidden-actions custom-hooka-card">
        <div class="product-card__buttons custom-hooka-card-buttons">
            <div class="rate-card_wrap">
                <div class="rate-number">@Model.Rating</div><img src="https://uploads-ssl.webflow.com/62d93fe56471ce4a6284ae8f/62da8798e440ccaf8af1e3d3_Path%2036.svg" loading="lazy" alt="" class="rate-icon">
            </div>
            @if (SignInManager.IsSignedIn(User)) {
                <button data-placeId="@Model.Id" style="padding:1.5em;" class="btn btn-light btn-svg-icon btn-svg-icon--fake-svg product-card__wishlist add-to-favorite-btn" type="button">
                    <svg  xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 27.954 25.959">
                        <path class="favorite-icon " id="Path_28" data-name="Path 28" d="M3317.794,87.587c-5.289-2.942-13.555-10.584-13.216-17.371.35-7.012,9.327-10,13.216-2.691,3.89-7.306,12.867-4.321,13.217,2.691C3331.35,77,3323.084,84.645,3317.794,87.587Z" transform="translate(-3303.817 -62.486)" fill="@(Model.IsInFavorite ? "red" : "none")" stroke="#231f20" stroke-miterlimit="10" stroke-width="1.5" fill-rule="evenodd" />
                    </svg>
                </button>
            }
         
            <button style="padding:1.5em;" class="btn btn-light btn-svg-icon btn-svg-icon--fake-svg product-card__wishlist share-btn" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="1.7em" height="1.7em" viewBox="0 0 48.66 55.806">
  <path id="Path_12" data-name="Path 12" d="M569.145,55.656a8.826,8.826,0,0,0-12.5-.007l-.535.554-16.046-9.875.162-.441a8.871,8.871,0,1,0-2.057,3.211l.533-.554,16.048,9.875-.162.442a8.839,8.839,0,0,0,0,6.084l.162.442L538.7,75.262l-.534-.555a8.818,8.818,0,1,0,2.058,3.212l-.162-.441L556.109,67.6l.535.554a8.84,8.84,0,1,0,12.5-12.5Zm-32.8-8.4a6.243,6.243,0,1,1-.008-8.836l.008.008a6.26,6.26,0,0,1,0,8.828Zm0,38.117a6.26,6.26,0,1,1,1.821-4.414A6.206,6.206,0,0,1,536.342,85.376Zm30.971-19.059a6.243,6.243,0,1,1-.008-8.835l.008.007a6.26,6.26,0,0,1,0,8.828Z" transform="translate(-523.076 -34)" fill="#1a1718"/>
</svg>
            </button>
        </div>
        <div class="post-card__image">
            <a asp-action="Place" asp-controller="Places" asp-route-id="@Model.Id" class="product-image__body">
                <img class="product-image__img" src="@Model.Image" alt="">
            </a>
        </div>
        <div class="post-card__info">
            <div class="post-card__name">
                <a asp-action="Place" asp-controller="Places" asp-route-id="@Model.Id">@Model.Name</a>
            </div>
            <div class="post-card__content is--cuisines"> @Model.Cuisine </div>
            <div class="post-card__content is--location"> @Model.Location </div>
        </div>
    </div>
</div>
