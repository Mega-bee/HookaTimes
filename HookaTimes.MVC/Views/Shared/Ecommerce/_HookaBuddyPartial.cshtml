@model Buddy_VM
<div onclick='window.location.href="/Buddy/BuddyProfile/@Model.Id"' class="block-products__list-item">
    <div class="product-card product-card--hidden-actions custom-hooka-card">
        <div class="product-card__buttons custom-hooka-card-buttons "></div>
        <div class="post-card__image">
            <a asp-action="BuddyProfile" asp-controller="Buddy" asp-route-id="@Model.Id" class="product-image__body">
                <img class="product-image__img buddy" src="@Model.Image" alt="">
            </a>
        </div>
        <div class="post-card__info">
            <div class="post-card__name">
                <a href="">@Model.Name </a>
            </div>
            <div class="post-card__content is--cuisines"> @Model.Profession </div>
            <div class="post-card__content is--location"> @Model.Address </div>
        </div>
    </div>
</div>

<style>
    .product-image__img.buddy {
           
            width: 100%;
           
        }
</style>
