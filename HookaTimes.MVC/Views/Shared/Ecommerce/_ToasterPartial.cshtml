@if (TempData["success"] != null)
{
    <div class="container">

        <div style="position:absolute;top: 7em; right: 2em; ">
            <div class="toast" data-autohide="false" style="border: 2.5px solid #28a745;">
                <div class="toast-header ">
                    <strong class="mr-auto text-success">Toast Header</strong>
                    <small class="text-muted">5 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
                </div>
                <div class="toast-body text-dark" style="font-size:1em;">
                    Some text inside the toast body
                </div>
            </div>
        </div>
    </div>
}
else if (TempData["error"] != null)
{
    <div class="container">

        <div style="position:absolute;top: 7em; right: 2em;">
            <div class="toast" data-autohide="false" style=" background-color: #ffdede; border: 2.5px solid rgb(255 0 0);">
                <div class="toast-header" style=" background-color:#ffdede;">
                    <strong class="mr-auto text-danger ">Toast Header</strong>
                    <small class="text-muted">5 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
                </div>
                <div class="toast-body text-dark" style="font-size:1em;">
                    Some text inside the toast body
                </div>
            </div>
        </div>
    </div>
   
}


