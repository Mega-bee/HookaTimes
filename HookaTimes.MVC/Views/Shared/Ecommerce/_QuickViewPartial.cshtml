@{
    List<InvitationOption_VM> options = (List<InvitationOption_VM>)ViewBag.options;
}

<style>
    .invite-section {
        display: flex;
        width: 100%;
        margin-right: auto;
        margin-left: auto;
        padding: 0em 2em;
        flex-direction: column;
        justify-content: flex-start;
        align-items: stretch;
        text-align: center;
    }
    .invite-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .checkbox-field {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.5);
        color: rgba(0, 0, 0, 0.5);
        font-size: 1.2em;
        padding-left: 20px;
    }

    .checkbox-2 {
        margin-right: 13px;
    }
    .w-checkbox-input--inputType-custom {
        border-width: 1px;
        border-color: #ccc;
        border-style: solid;
        width: 12px;
        height: 12px;
        border-bottom-left-radius: 2px;
        border-bottom-right-radius: 2px;
        border-top-left-radius: 2px;
        border-top-right-radius: 2px;
    }
    .w-checkbox-input {
        float: left;
        margin-bottom: 0px;
        margin-left: -20px;
        margin-right: 0px;
        margin-top: 4px;
        line-height: normal;
    }
    .w-form-label {
        display: inline-block;
        cursor: pointer;
        font-weight: normal;
        margin-bottom: 0px;
    }
    .select-field {
        margin-top: 0.6em;
        background-color: transparent;
    }

    .div-block-59 {
        position: relative;
    }
    .submit-button {
        position: relative;
        z-index: 1;
        background-color: #fdcf51;
        font-size: 1em;
        display: inline-block;
        padding: 9px 15px;
        color: white;
        border: 0;
        line-height: inherit;
        text-decoration: none;
        cursor: pointer;
        border-radius: 0;
    }
    
    .w-form-done {
        display: none;
        padding: 20px;
        text-align: center;
        background-color: #dddddd;
    }
    .w-form-fail {
        display: none;
        margin-top: 10px;
        padding: 10px;
        background-color: #ffdede;
    }

    /*form */
    h1,
    h3 {
        font-weight: 400;
    }
    h1 {
        font-size: 32px;
    }

    .info {
        width: 100%;
    }
    .main-block,
    .info {
        display: flex;
        flex-direction: column;
    }
    .main-block {
        justify-content: center;
        align-items: center;
        width: 100%;
        min-height: 100%;
       /* background: url("/uploads/media/default/0001/01/e7a97bd9b2d25886cc7b9115de83b6b28b73b90b.jpeg")
            no-repeat center;*/
        background-size: cover;
    }
    .invite-form {
        width: 65%;
        padding: 25px;
        margin-bottom: 20px;
    }
    input,
    select {
        padding: 5px;
        margin-bottom: 20px;
        background: transparent;
        border: none;
        border-bottom: 1px solid #eee;
        color: rgba(0, 0, 0, 0.5);
    }
    input::placeholder {
        color: #eee;
    }
    option {
        background: black;
        border: none;
    }
    .metod {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }
    input[type="radio"] {
        display: none;
    }
    label.radio {
        position: relative;
        display: inline-block;
        margin-right: 20px;
        text-indent: 32px;
        cursor: pointer;
    }
    label.radio:before {
        content: "";
        position: absolute;
        top: -1px;
        left: 0;
        width: 17px;
        height: 17px;
        border-radius: 50%;
        border: 2px solid #ffd333;
    }
    label.radio:after {
        content: "";
        position: absolute;
        width: 8px;
        height: 4px;
        top: 5px;
        left: 5px;
        border-bottom: 3px solid #ffd333;
        border-left: 3px solid #ffd333;
        transform: rotate(-45deg);
        opacity: 0;
    }
    input[type="radio"]:checked + label:after {
        opacity: 1;
    }
    .div-block-58 {
        width: 100%;
        margin-top: 0em;
        margin-bottom: 2em;
    }
    .textarea {
        min-height: 5em;
    }
    .w-input,
    .w-select {
        display: block;
        width: 100%;
        height: 38px;
        padding: 8px 12px;
        margin-bottom: 10px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #333333;
        vertical-align: middle;
        background-color: #ffffff;
        border: 1px solid #cccccc;
    }
</style>



<div class="quickview">
    <button class="quickview__close" type="button">
        <svg width="20px" height="20px">
            <use xlink:href="/FrontendAssets/images/sprite.svg#cross-20"></use>
        </svg>
    </button>
    <div class="product product--layout--quickview" data-layout="quickview">
        <div>
            <div class="invite-section">
                <div class="login-container w-form">
                    <div class="main-block">
                        <h3 style="margin-bottom: 1.5em">Invite Form</h3>
                        <form class="invite-form" role="form" method="post" asp-action=""  >
                            <div class="metod">
                                @foreach (var opt in options)
                                {
                                    
                                
                                <div class="w-checkbox checkbox-field">
                                    <input
                                        type="radio"
                                        value="@opt.Id"
                                        id="radioOne"
                                        name="metod"
                                        checked
                                    />
                                    <label for="radioOne" class="radio"
                                        >@opt.Title</label
                                    >
                                </div>
                                }
                            </div>

                            <div class="info">
                                @*<select>
                                    <option value="time" disabled selected>
                                        Pick up time
                                    </option>
                                    <option value="8">8:00am</option>
                                    <option value="9">9:00am</option>
                                    <option value="10">10:00am</option>
                                    <option value="12">12:00pm</option>
                                    <option value="1">1:00pm</option>
                                    <option value="3">3:00pm</option>
                                    <option value="6">6:00pm</option>
                                    <option value="7">7:00pm</option>
                                </select>*@
                                <div class="form-group">
                                    @*<label>Input DateTime Picker</label>*@
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="datetime" name="datetime">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar-o"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="div-block-58">
                                <textarea
                                    placeholder="Example Text"
                                    maxlength="5000"
                                    id="field-2"
                                    name="field-2"
                                    data-name="Field 2"
                                    class="textarea w-input"
                                ></textarea>
                            </div>

                            <button href="/" class="w-button submit-button">
                                Submit
                            </button>
                        </form>
                    </div>
                    <div
                        class="w-form-done"
                        tabindex="-1"
                        role="region"
                        aria-label="Email Form success"
                    >
                        <div>Thank you! Your invitation has been sent!</div>
                    </div>
                    <div
                        class="w-form-fail"
                        tabindex="-1"
                        role="region"
                        aria-label="Email Form failure"
                    >
                        <div>
                            Oops! Something went wrong while submitting the
                            invitation.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
